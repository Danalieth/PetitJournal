{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/article.css') }}">
{% endblock %}

{% block body %}
    {% for article in articles %}
    <article>
        <h2><a href="{{ path('article_show', {id: article.id}) }}">{{ article.getTitle() }}</a></h2>
        <p class="content">{{ article.getBody() }}</p>
        <p class="foot">{{ article.getDatCrea() | date('d/m/y') }}</p>
    </article>
    {% endfor %}

{% endblock %}
